<atlassian-plugin key="${project.groupId}.${project.artifactId}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
        <param name="configure.url">/admin/plugins/spectrum/configure.action</param>
       
    </plugin-info>

    <component name="spectrumManager" class="ch.unibas.urz.confluence.spectrum.SpectrumManager" key="spectrumManager"/>
    
    <xhtml-macro name="confluence-plugin-spectrum" class="ch.unibas.urz.confluence.spectrum.AlarmTableMacro" key="my-macro">
        <parameters>
        <!-- 
        	<parameter name="secureconnection" type="boolean" default="true" />
        	<parameter name="username" type="string" required="true" />
        	<parameter name="password" type="string" required="true" />
        	<parameter name="servername" type="string" required="true" />
        	<parameter name="serverport" type="string" />
        	<parameter name="URLpath" type="string" default="spectrum" />
        	 -->
        	<parameter name="collection" type="string" />
        </parameters> 
         
    </xhtml-macro>
    
    <xwork name="Configure spectrum" key="configure-confluence-plugin-spectrum">
        <package name="confluence-plugin-spectrum" extends="default" namespace="/admin/plugins/spectrum">
            <default-interceptor-ref name="defaultStack"/>
            <action name="configure" class="ch.unibas.urz.confluence.spectrum.config.ConfigureSpectrumAction" method="input">
                <result name="input" type="velocity">/templates/spectrum/config/configure-spectrum.vm</result>
                <result name="error" type="velocity">/templates/spectrum/config/configure-spectrum.vm</result>
                <result name="success" type="velocity">/templates/spectrum/config/configure-spectrum.vm</result>
            </action>
            <action name="save" class="ch.unibas.urz.confluence.spectrum.config.ConfigureSpectrumAction" method="save">
                <result name="input" type="velocity">/templates/spectrum/config/configure-spectrum.vm</result>
                <result name="error" type="velocity">/templates/spectrum/config/configure-spectrum.vm</result>
                <result name="success" type="velocity">/templates/spectrum/config/configure-spectrum.vm</result>
            </action>
        </package>
    </xwork>
    
</atlassian-plugin>
