<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=EDGE,chrome=IE7">
    <meta charset="utf-8">
    <title>$title - Confluence</title>

    #requireResource("com.atlassian.auiplugin:ajs")
    $webResourceManager.getResources()
    #renderMetadata()

    <link rel="stylesheet" type="text/css" href="$req.contextPath/setup/includes/css/setup.css">
    <script type="text/javascript" src="$req.contextPath/setup/includes/js/setup.js"></script>
    #favicon()
</head>
<body class="setup">
<div id="full-height-container">
<div id="PageContent">
    <div class="page-section setup-header">
        <div class="page-group">
            <div class="page-item logocell">
                <h1>
                    <a class="logocell-text" href="$req.contextPath/"><img src="$staticResourceUrlPrefix/images/logo/confluence_header.png" alt="Confluence"></a>
                </h1>
            </div>
            <div class="page-item locale-switcher">
            ## Display the locale flags (see setuplicence.vm)
            #if ($sitemeshPage.getProperty("page.localeflags"))
                <div class="locale-flags">
                    $sitemeshPage.getProperty("page.localeflags")
                </div>
            #end
            </div>
        </div>
    </div>

    <div class="page-section setup-content">
        <div class="page-group">
            <div class="page-item nav">
                <div class="navmenu">
                    #parse ("/decorators/includes/setupstep.vm")
                </div>
            </div>
            <div class="page-item content">
                <h2 class="pageheader pagetitle">$title</h2>
                $body
            </div>
        </div>
    </div>

#set ($showHSQLWarning = true)
#parse ("/decorators/includes/footer.vm")
</div>