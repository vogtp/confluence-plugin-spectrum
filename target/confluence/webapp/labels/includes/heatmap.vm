#if( $rankedResults.size() == 0 )
    <p class="smalltext">$action.getText("no.labels.defined")</p>
#else
    <div class="heatmap">
        <div class="operation-links">
            $action.getText("order.word"):
            #if ($helper.action.isGroupRanks() == true)
                <a href="$pageContext?groupRanks=false#if ($helper.space)&amp;key=${action.space.key}#end">$action.getText("alphabetically.word")</a>
                &middot;
                <strong>$action.getText("by.popularity")</strong>
            #else
                <strong>$action.getText("alphabetically.word")</strong>
                &middot;
                <a href="$pageContext?groupRanks=true#if ($helper.space)&amp;key=${action.space.key}#end">$action.getText("by.popularity")</a>
            #end
        </div>
        <ul class="tag-cloud label-list">
        #foreach($result in $action.results)
            #set ($size = 12 + $result.rank * 2)
            #set ($label = $result.label)
            <li style="font-size:${size}px;" aria-level="$result.rank">#parse("/labels/label.vm")</li>
        #end
        </ul>
    </div>
#end
